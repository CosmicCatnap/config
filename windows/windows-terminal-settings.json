// Windows Terminal Settings File
// Requires the Hack font to be installed or a substituted font to be made in defaults
{
  "$schema": "https://aka.ms/terminal-profiles-schema",
  "defaultProfile": "{58ad8b0c-3ef8-5f4d-bc6f-13e4c00f2530}",
  // Launch Settings
  "initialCols": 120,
  "initialRows": 30,
  "launchMode": "default",
  // Selection
  "copyOnSelect": true,
  // Tab UI
  "alwaysShowTabs": true,
  "showTabsInTitlebar": true,
  "showTerminalTitleInTitlebar": true,
  // Miscellaneous
  "confirmCloseAllTabs": true,
  "startOnUserLogin": false,
  "theme": "system",
  "rowsToScroll": "system",
  "snapToGridOnResize": true,
  // Profiles
  "profiles": {
    "defaults": {
      "colorScheme": "Dracula",
      "fontFace": "Hack",
      "fontSize": 12,
      "padding": "5, 5, 5, 5",
      "historySize": 9001,
      "useAcrylic": false
    },
    "list": [
      {
        "colorScheme": "Dracula",
        "commandline": "powershell.exe",
        "guid": "{61c54bbd-c2c6-5271-96e7-009a87ff44bf}",
        "icon": "ms-appx:///ProfileIcons/{61c54bbd-c2c6-5271-96e7-009a87ff44bf}.png",
        "name": "Windows PowerShell",
        "startingDirectory": "%USERPROFILE%"
      },
      {
        "colorScheme": "Dracula",
        "commandline": "cmd.exe",
        "guid": "{0caa0dad-35be-5f56-a8ff-afceeeaa6101}",
        "icon": "ms-appx:///ProfileIcons/{0caa0dad-35be-5f56-a8ff-afceeeaa6101}.png",
        "name": "Command Prompt",
        "startingDirectory": "%USERPROFILE%"
      },
      {
        "colorScheme": "Dracula",
        "historySize": 9001,
        "startingDirectory": "%USERPROFILE%",
        "guid": "{58ad8b0c-3ef8-5f4d-bc6f-13e4c00f2530}",
        "name": "Debian",
        "source": "Windows.Terminal.Wsl"
      },
      {
        "colorScheme": "Dracula",
        "historySize": 9001,
        "startingDirectory": "%USERPROFILE%",
        "guid": "{c6eaf9f4-32a7-5fdc-b5cf-066e8a4b1e40}",
        "name": "Ubuntu-18.04",
        "source": "Windows.Terminal.Wsl"
      },
      {
        "guid": "{b453ae62-4e3d-5e58-b989-0a998ec441b8}",
        "hidden": false,
        "name": "Azure Cloud Shell",
        "source": "Windows.Terminal.Azure"
      }
    ]
  },
  // Schemes
  "schemes": [
    {
      "background": "#282A36",
      "black": "#21222C",
      "blue": "#BD93F9",
      "brightBlack": "#6272A4",
      "brightBlue": "#D6ACFF",
      "brightCyan": "#A4FFFF",
      "brightGreen": "#69FF94",
      "brightPurple": "#FF92DF",
      "brightRed": "#FF6E6E",
      "brightWhite": "#FFFFFF",
      "brightYellow": "#FFFFA5",
      "cyan": "#8BE9FD",
      "foreground": "#F8F8F2",
      "green": "#50FA7B",
      "name": "Dracula",
      "purple": "#FF79C6",
      "red": "#FF5555",
      "white": "#F8F8F2",
      "yellow": "#F1FA8C"
    }
  ],
  // Keybindings
  "keybindings": [
    {
      "command": {
        "action": "copy",
        "singleLine": false
      },
      "keys": "ctrl+c"
    },
    {
      "command": {
        "action": "copy",
        "singleLine": false
      },
      "keys": "insert"
    },
    {
      "command": "paste",
      "keys": "ctrl+v"
    },
    {
      "command": "paste",
      "keys": "insert"
    }
  ]
}
